@model List<User>

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results</h1>
@if (Model.Count > 0)
{
    foreach (var user in Model)
    {
        <div class="searched-profile">
            <a class="post-author" asp-controller="Home" asp-action="Profile" asp-route-id="@user.UserName">
            <div class="searched-style">
                <img src="https://picsum.photos/200/200" alt="Profile Picture" height="100 " width="100" />
            </div>
            </a>
            <div class="user-details">
                 <a class="post-author" asp-controller="Home" asp-action="Profile" asp-route-id="@user.UserName">
                <h2>@user.DisplayedName</h2>
                </a>
                <form method="post">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <button type="submit" class="follow-button">Follow</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <p>No users found.</p>
}