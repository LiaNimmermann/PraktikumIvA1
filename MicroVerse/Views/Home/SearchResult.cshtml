@using MicroVerse.ViewModels
@model List<UserBadgeViewModel>

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results</h1>
<div class="search-results-container">
@if (Model.Count > 0)
{
    foreach (var user in Model)
    {
        <div class="searched-profile">
            <a class="post-author" asp-controller="Home" asp-action="Profile" asp-route-id="@user.UserName">
            <div class="searched-style">
                <img src="@user.Picture" alt="Profile Picture" height="120 " width="120" />
            </div>
            </a>
            <div class="user-details">
                <a style="text-decoration:none;" asp-controller="Home" asp-action="Profile" asp-route-id="@user.UserName">
                <h2>@user.DisplayedName</h2>
                </a>
                <br />
                <div class="follow-btn-container">
                    <partial name="_FollowBtn" for="@user.Follows">
                </div>
            </div>
        </div>
    }
}
else
{
    <p>No users found.</p>
}
</div>