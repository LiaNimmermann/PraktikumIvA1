<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MicroVerseMaui.ViewModels"   
             x:DataType="viewmodel:LoginPageViewModel"
             x:Class="MicroVerseMaui.Views.LoginPage">



    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Entry Placeholder="Email" Text="{Binding Email}">


        </Entry>
        <Entry Placeholder="Password" Text="{Binding Password}">

        </Entry>
        <Button Text="Log In" TextColor="DarkGreen"  Command="{Binding LoginCommand}" />



    </VerticalStackLayout>
</ContentPage>
